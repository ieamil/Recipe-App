<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ttpng"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ttpng"
        android:supportsRtl="true"
        android:theme="@style/Theme.TasteTeaser"
        tools:targetApi="31" >
        <activity
            android:name=".nav_menu"
            android:exported="false"
            android:label="@string/title_activity_nav_menu"
            android:theme="@style/Theme.TasteTeaser.NoActionBar" />
        <activity
            android:name=".Login"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:screenOrientation="sensor"
            android:theme="@style/Base.Theme.TasteTeaser" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="sensor"
            android:theme="@style/Base.Theme.TasteTeaser.BackgroundImageStyle" >
        </activity>
        <activity
            android:name=".ForgotPasswordActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="sensor"
            android:theme="@style/Base.Theme.TasteTeaser.BackgroundImageStyle" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:screenOrientation="sensor"
            android:theme="@style/Base.Theme.TasteTeaser.BackgroundImageStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>